<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="BlissRom-R"
          fetch="https://github.com/BlissRom-R"
          revision="r" />

  <remote name="BlissRoms-Devices"
          fetch="https://github.com/BlissRoms-Devices" />

  <!-- General Repos -->
  <project path="build/make" name="platform_build_make" remote="BlissRom-R" >
  <copyfile src="core/root.mk" dest="Makefile" />
  <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
  <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
  <linkfile src="core" dest="build/core" />
  <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
  <linkfile src="target" dest="build/target" />
  <linkfile src="tools" dest="build/tools" />
  </project>

  <!-- Frameworks -->
  <project path="frameworks/av" name="platform_frameworks_av" remote="BlissRom-R" />
  <project path="frameworks/base" name="platform_frameworks_base" remote="BlissRom-R" />
  <project path="frameworks/native" name="platform_frameworks_native" remote="BlissRom-R" />
  <project path="frameworks/opt/net/wifi" name="platform_frameworks_opt_net_wifi" remote="BlissRom-R" />
  <project path="frameworks/opt/telephony" name="platform_frameworks_opt_telephony" remote="BlissRom-R" />
  
  <!-- Packages -->
  <project path="packages/apps/Bluetooth" name="platform_packages_apps_Bluetooth" remote="BlissRom-R" />
  <project path="packages/apps/Contacts" name="platform_packages_apps_Contacts" remote="BlissRom-R" />
  <project path="packages/apps/Dialer" name="platform_packages_apps_Dialer" remote="BlissRom-R" />
  <project path="packages/apps/DocumentsUI" name="platform_packages_apps_DocumentsUI" remote="BlissRom-R" />
  <project path="packages/apps/Launcher3" name="platform_packages_apps_Launcher3" remote="BlissRom-R" />
  <project path="packages/apps/Messaging" name="platform_packages_apps_Messaging" remote="BlissRom-R" />
  <project path="packages/apps/Nfc" name="platform_packages_apps_Nfc" remote="BlissRom-R" />
  <project path="packages/apps/Settings" name="platform_packages_apps_Settings" remote="BlissRom-R" />
  <project path="packages/apps/SettingsIntelligence" name="platform_packages_apps_SettingsIntelligence" remote="BlissRom-R" />
  <project path="packages/services/Telecomm" name="platform_packages_services_Telecomm" remote="BlissRom-R" />

  <!-- Prebuilts -->
  <project path="prebuilts/build-tools" name="platform_prebuilts_build-tools" clone-depth="1" remote="BlissRom-R" />

  <!-- Proton Clang -->
  <project path="prebuilts/clang/host/linux-x86/clang-proton" name="kdrag0n/proton-clang" clone-depth="1" revision="master" remote="github" />

  <!-- Providers -->
  <project path="packages/providers/MediaProvider" name="platform_packages_providers_MediaProvider" remote="BlissRom-R" />
  <project path="packages/providers/DownloadProvider" name="platform_packages_providers_DownloadProvider" remote="BlissRom-R" />

  <!-- Vendor -->
  <project path="vendor/bliss" name="platform_vendor_bliss" remote="BlissRom-R" />

  <!-- System -->
  <project path="system/core" name="platform_system_core" remote="BlissRom-R" />
  <project path="system/netd" name="platform_system_netd" remote="BlissRom-R" />
  <project path="system/sepolicy" name="platform_system_sepolicy" remote="BlissRom-R" />

</manifest>
